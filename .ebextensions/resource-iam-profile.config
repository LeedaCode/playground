{
    "Resources": {
        "PlaygroundAppPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "pixi-playground-app-policy",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "DBAccess",
                            "Effect": "Allow",
                            "Action": [
                                "dynamodb:BatchGetItem",
                                "dynamodb:BatchWriteItem",
                                "dynamodb:DeleteItem",
                                "dynamodb:DescribeTable",
                                "dynamodb:GetItem",
                                "dynamodb:PutItem",
                                "dynamodb:UpdateItem",
                                "dynamodb:Query",
                                "dynamodb:Scan"
                            ],
                            "Resource": [
                                {
                                    "Fn::Join": [
                                        "/",
                                        [
                                            {
                                                "Fn::Join": [
                                                    ":",
                                                    [
                                                        "arn:aws:dynamodb",
                                                        {
                                                            "Ref": "AWS::Region"
                                                        },
                                                        {
                                                            "Ref": "AWS::AccountId"
                                                        },
                                                        "table"
                                                    ]
                                                ]
                                            },
                                            {
                                                "Ref": "PlaygroundsTable"
                                            }
                                        ]
                                    ]
                                }
                            ]
                        },
                        {
                            "Sid": "S3ItemsAccess",
                            "Effect": "Allow",
                            "Action": [
                                "s3:DeleteObject",
                                "s3:GetObject",
                                "s3:GetObjectVersion",
                                "s3:PutObject",
                                "s3:RestoreObject"
                            ],
                            "Resource": [
                                {
                                    "Fn::Join": [
                                        ":",
                                        [
                                            "arn:aws:s3::",
                                            {
                                                "Ref": "PlaygroundItemsBucket"
                                            }
                                        ]
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "PlaygroundAppRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "Policies": [
                    "AWSElasticBeanstalkWebTier",
                    {
                        "Ref": "PlaygroundAppPolicy"
                    }
                ]
            }
        },
        "PlaygroundAppInstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "Roles": [
                    {
                        "Ref": "PlaygroundAppRole"
                    }
                ]
            }
        }
    }
}
